{% extends 'base.html.twig' %}

{% block title %}Objet index{% endblock %}

{% block body %}
    <h1>Objet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Titre</th>
                <th>Nb_de_tours</th>
                <th>Neuf</th>
                <th>Annee</th>
                <th>Album</th>
                <th>Duree</th>
                <th> Style </th>
                <th> Format </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for objet in objets %}
            <tr>
                <td>{{ objet.id }}</td>
                <td>{{ objet.description }}</td>
                <td>{{ objet.Titre }}</td>
                <td>{{ objet.NbDeTours }}</td>
                <td>{{ objet.Neuf ? 'Yes' : 'No' }}</td>
                <td>{{ objet.Annee }}</td>
                <td>{{ objet.Album }}</td>
                <td>{{ objet.Duree }}</td>
                <td>{{ objet.style|join(', ') }}</td>
                <td>{{ objet.format|join(', ') }}</td>

        
                <td>
                    <a href="{{ path('app_objet_show', {'id': objet.id}) }}">show</a>
                    <a href="{{ path('app_objet_edit', {'id': objet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_objet_new') }}">Create new</a>
{% endblock %}
