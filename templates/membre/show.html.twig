{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ membre.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ membre.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_membre_index') }}">back to membre</a>

    <a href="{{ path('app_membre_edit', {'id': membre.id}) }}">edit</a>
    
    {% for inventaire in membre.nom %}
       <li><a href="{{ path('inventaire_show', {'id' : inventaire.id}) }}">{{ inventaire }}</a></li>
     {% endfor %}
     <a href="{{ path('app_inventaire_new', {'id': membre.id}) }}">add new inventaire</a>

    {{ include('membre/_delete_form.html.twig') }}
{% endblock %}
