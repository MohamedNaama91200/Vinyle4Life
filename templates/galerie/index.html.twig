                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    <h1>Galerie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Publiee</th>
                <th>Créateur</th>
                <th>Vinyles</th>
                <th> &nbsp; </th>

            </tr>
        </thead>
        <tbody>
        {% for g in galerie %}
            <tr>
                <td>{{ g.id |default('Your default value here') }}</td>
                <td>{{ g.description }}</td>
                <td>{{ g.publiee ? 'Yes' : 'No' }}</td>
                 <td>{{ g.creator }}</td>

               

             <td>   {%  for objet in  g.objet %}
                    {{objet}} 
                {% endfor %} <td>
                
                 <td>   <a href="{{ path('app_galerie_show', {'id': g.id}) }}">show</a>
                    <a href="{{ path('app_galerie_edit', {'id': g.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_galerie_new') }}">Create new</a>
{% endblock %}
